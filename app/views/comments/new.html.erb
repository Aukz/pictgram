<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <%=form_for @comment do |f|%>
        <%= f.hidden_field :topic_id, value: params[:topic_id] %>
        <div class="form-group">
          <%= f.label :コメント, class: 'text-white' %>
          <%= f.text_field :body, class: 'form-control' %>
        </div>
        <%= f.submit "コメントする", class: 'btn-block btn-white' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
